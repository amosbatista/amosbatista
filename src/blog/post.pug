div(my-header)

// The content
.page-content.blog-post(easy-scroll)

	.top-history(easy-scroll-top)

		img.featured-img(ng-src="{{post.mainImage}}")
		p.img-caption
			|{{post.imageCaption}}

		h1.title
			|{{post.title}}

		p.excerpt
			|{{post.excerpt}}


	.page-content-subpart(easy-scroll-content)
		p.content(put-html content='post.content')

	.page-content-subpart(easy-scroll-content)
		share-buttons(share-options="shareOpt")


a.scroll-link(href="" easy-scroll-content-link)
	i.fa.fa-angle-double-down


div(my-footer)